
{% set _req_ = _define.nullable ? "" : "required" %}
{% if _value|length == 0 %}
    {% set _value = "now"|date("Y-m-d hh:ii") %}
{% endif %}

{% if _readonly_ != "readonly" %}
    <div class="input-group date d" data-provide="timePicker">
    <input id="{{ _sId~_name }}" type="text" class="form-control" name="_{{ _name }}" value="{{ _value }}" {{ _req_ }} {{ _readonly_ }}>
    <div class="input-group-addon">
        <span class="glyphicon glyphicon-th"></span>
    </div>
    </div>

{% else %}
    <input type="text" class="form-control" id="{{ _sId~_name }}" name="_{{ _name }}" value="{{ _value }}" {{ _readonly_ }}>
{% endif %}
