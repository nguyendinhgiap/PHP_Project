{% if _value != null %}
    <img class="img-responsive" src="{{ _value }}" width="25%">
{% endif %}
{% if _readonly_ != "readonly" %}
    <div class="input-group">
                <span class="input-group-btn">
                    <span class="btn btn-primary btn-file">
                        Browse &hellip; <input type="file"  id="{{ _sId~_name }}" name="_{{ _name }}" accept="image/*"  onchange="setFileInfo_{{ _sId~_name }}(this.files)">
                    </span>
                </span>
        <input type="text" class="form-control cms_file" id="{{ _sId~_name }}_text" readonly>
    </div>
    <script>
        function setFileInfo_{{ _sId~_name }}(files) {
            $("#{{ _sId~_name }}_text").val(files[0].name);
        }
    </script>
    {#<input ui-jq="filestyle" ui-options="{icon: false, buttonName: 'btn-primary'}" type="file">#}
{% endif %}
