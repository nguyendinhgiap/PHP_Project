<div class="input-group">
    <span class="input-group-btn">
        {% if _value != null %}
            <span class="btn btn-success btn-file" onclick="window.open('{{ _value }}'); return false;">
                <i class="fa-download fa"></i>  Download
            </span>
        {% endif %}
        {% if _readonly_ != "readonly" %}
            <span class="btn btn-primary btn-file">
                Browse &hellip; <input type="file"  id="{{ _sId~_name }}" name="_{{ _name }}" onchange="setFileInfo_{{ _sId~_name }}(this.files)">
            </span>
        {% endif %}
    </span>
    {% if _readonly_ != "readonly" %}
        <input type="text" class="form-control cms_file" id="{{ _sId~_name }}_text" readonly>
        <script>
        function setFileInfo_{{ _sId~_name }}(files) {
            $("#{{ _sId~_name }}_text").val(files[0].name);
        }
    </script>
    {% endif %}
</div>
