                                    </div>

                                    <div class="col-md-5">
                                        <label class="control-label sm">Close at</label>
                                        <input type="text" id="close_at_id" name="close_at" class="form-control"
                                               placeholder="HH:mm a" data-date-format="HH:ii P" oninput="validateHhMm(this);">
                                    </div>
                                </div>

                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-2"></label>
                            <div class="col-sm-10">
                                {#<label class="col-sm-2 control-label">Status</label>#}
                                <div class="row">

                                    <div class="col-md-5">
                                        <div class="input-group">
                                            <span class="input-group-btn">
                                            <span class="btn btn-primary btn-file">
