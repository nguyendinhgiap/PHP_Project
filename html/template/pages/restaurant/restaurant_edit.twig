                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-2"></label>
                            <div class="col-sm-10">
                                {#<label class="col-sm-2 control-label">Status</label>#}
                                <div class="row">
                                    <div class="col-md-5">
                                        <label class="control-label sm">Teams</label><br>
                                        {% for _name, _define in db %}
                                            {% if _name == "team_id" %}
                                                {% set _value = items[_name] %}
