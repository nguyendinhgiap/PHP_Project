{% extends "layout.twig" %}
{% set content_title = 'Background Manager' %}

{% block ext_header %}
    <link rel="stylesheet" href="{{ root }}/css/input-file.css">

{% endblock %}

{% block content %}
    <!-- content -->
    <div id="content" class="app-content" role="main">
        <div class="app-content-body ">
            <div class="bg-light lter b-b wrapper-md">
                <h1 class="m-n font-thin h3">{{ content_title }}</h1>
            </div>
            <div class="wrapper-md" ng-controller="FormDemoCtrl">
                <div class="row">
                    <div class="col-sm-3"></div>
                    <div class="col-sm-6">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <form class="form" action="{{ main_url }}/system/bg" method="POST" enctype="multipart/form-data">
                                    <div class="text-danger wrapper text-center" ng-show="authError">{{ error_message }}</div>
                                    <div class="text-success wrapper text-center" ng-show="authError">{{ success_message }}</div>
                                    <div class="form-group">
                                        <div class="col-sm-12">
                                            {% if image|length > 0 %}
                                            <img class="img-responsive" src="{{ image }}" width="100%">
                                            {% endif %}
                                            <br>
                                            <div class="input-group">
                                                <span class="input-group-btn">
                                                    <span class="btn btn-primary btn-file">
                                                        Browse &hellip; <input type="file" name="bg" accept="image/*" onchange="setFileInfo(this.files)">
                                                    </span>
                                                </span>
                                                <input type="text" class="form-control cms_file" id="_text" readonly>
                                            </div>
                                            <script>
                                                function setFileInfo(files) {
                                                    $("#_text").val(files[0].name);
                                                }
                                            </script>
                                        </div>
                                    </div>
                                    <br>
                                    <button type="submit" class="btn btn-primary" name="action" value="save">Save background</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



        </div>
    </div>
    <!-- /content -->

{% endblock %}